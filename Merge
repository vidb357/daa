
//merge_______________________
#include <stdio.h>
void merge(int a[],int low, int mid, int high){
    int i,j,k,b[20],r,x;
   
    i =low;
    j=mid+1;
    k=low;
   
    while(i<=mid && j<=high){
        if(a[i]<a[j]){
            b[k]=a[i];
            i++;
        }
        else{
            b[k]=a[j];
            j++;
        }
       
        k++;
       
         
   
    }
   
    if(i<=mid){
        for(r=i; r<=mid; r++){
            b[k]=a[r];
            k++;
        }
    }
   
    else{
        for(r=j; r<=high; r++){
            b[k]=a[r];
            k++;
        }
    }
   
    for(x=0; x<=high;x++){
        a[x]=b[x];
       
    }
   
   

}
void merge_sort(int a[],int low, int high){
   
    int mid ;
    if (low<high){
        mid = (low+high)/2;
        merge_sort( a,low,mid);
        merge_sort(a,mid+1, high);
        merge(a,low,mid, high);
    }
}




int main(){
    int i;
    int a[5]={9,7,100,2,1};
    merge_sort(a,0,4);
   
   
    printf("Sorted array: \n");
    for(i=0; i<5; i++){
        printf("%d ", a[i]);
    }
}
